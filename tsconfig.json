{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["vite/client"],
    "baseUrl": "./",
    "strict": true,
    "removeComments": true,
    "paths": {
      "@/*": ["./src/*", ". /dist/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
